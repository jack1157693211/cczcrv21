<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/name"
        style="@style/Text_10dp_666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:minWidth="100dp"
        android:text="单人价格"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/price"
        style="@style/Text_10dp_666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:minWidth="100dp"
        android:text="¥2000"
        android:textColor="#FFB366"
        android:textSize="14dp" />


    <ImageButton
        android:id="@+id/left"
        android:layout_width="17dp"
        android:layout_height="19dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/unde_left_on_soild_line"
        app:srcCompat="@mipmap/minus_sign" />

    <TextView
        android:id="@+id/count"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/unde_on_soild_line"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="100dp"
        android:text="1" />

    <ImageButton
        android:id="@+id/right"
        android:layout_width="17dp"
        android:layout_height="19dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/on_right_unde_soild_line"
        app:srcCompat="@mipmap/plus_sign" />


</LinearLayout>
